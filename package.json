{
  "name": "ttvBoilerplate",
  "version": "1.0.0",
  "description": "React x TTV Extension Boilerplate",
  "scripts": {
    "test": "jest",
    "build": "webpack --mode=production",
    "start": "webpack-dev-server --mode=development",
    "host": "webpack-dev-server --mode=development --devrig",
    "watch": "webpack --watch",
    "serve": "webpack serve --mode",
    "help": "webpack --help"
  },
  "author": "ctnava.github.io",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-react": "^7.16.7",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@testing-library/user-event": "^13.5.0",
    "@webpack-cli/generators": "^2.4.2",
    "babel-loader": "^8.2.5",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.7.1",
    "file-loader": "^6.2.0",
    "html-loader": "^3.1.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^28.1.0",
    "mini-css-extract-plugin": "^2.6.0",
    "react-test-renderer": "^18.1.0",
    "sinon": "^14.0.0",
    "style-loader": "^3.3.1",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.0",
    "workbox-webpack-plugin": "^6.5.3"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "jose": "^4.8.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not ie <= 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.js?$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(scss|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/mocks/file.js",
      "\\.(css|sccss|less)$": "<rootDir>/mocks/style.js"
    }
  }
}
